<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ScrollView01" android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:id="@+id/label" android:textStyle="bold"
			android:layout_width="wrap_content" android:textSize="20dip"
			android:layout_height="wrap_content" android:text="Da: "
			android:layout_marginTop="5dip" />
		<EditText android:id="@+id/from" android:inputType="textShortMessage|textEmailAddress"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@android:drawable/editbox_background"
			android:layout_below="@id/label" android:text="mia@mail.it"
			android:layout_marginRight="5dip" android:layout_marginTop="5dip" />


		<TextView android:id="@+id/label2" android:textStyle="bold"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="A:   " android:textSize="20dip"
			android:layout_marginTop="10dip" android:layout_below="@id/from" />
		<EditText android:id="@+id/to" android:inputType="textShortMessage|textEmailAddress"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@android:drawable/editbox_background"
			android:layout_below="@id/label2" android:text="bonnyfone@gmail.com"
			android:layout_marginRight="5dip" android:layout_marginTop="5dip" />


		<TextView android:id="@+id/label3" android:textStyle="bold"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Oggetto:   " android:textSize="20dip"
			android:layout_marginTop="10dip" android:layout_below="@id/to" />
		<EditText android:id="@+id/subj" android:layout_width="fill_parent"
			android:inputType="textShortMessage" android:layout_height="wrap_content"
			android:background="@android:drawable/editbox_background"
			android:layout_below="@id/label3" android:text="test"
			android:layout_marginRight="5dip" android:layout_marginTop="5dip" />


		<TextView android:id="@+id/label4" android:textStyle="bold"
			android:layout_width="wrap_content" android:textSize="20dip"
			android:layout_height="wrap_content" android:text="Messaggio:"
			android:layout_marginTop="10dip" android:layout_below="@id/subj" />



		<EditText android:id="@+id/mess"
			android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
			android:textSize="15dip" android:textColor="#888888"
			android:layout_below="@id/label4" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:text="my message"
			android:layout_marginRight="5dip"
			android:scrollbarAlwaysDrawVerticalTrack="true" />


		<CheckBox android:id="@+id/check" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Notifica invio via email (cc)"
			android:checked="false" android:layout_below="@id/mess"/>



		<Button android:id="@+id/send" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerHorizontal="true"
			android:layout_below="@id/check" android:textSize="20dip"
			android:layout_marginTop="20dip" android:layout_marginBottom="20dip"
			android:text="  Invia email  " />



	</RelativeLayout>
</ScrollView>

